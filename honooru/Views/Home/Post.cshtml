<meta property="og:title" content="Honooru / Post" />
<meta property="og:description" content="View post" />

<link href="https://vjs.zencdn.net/8.10.0/video-js.css" rel="stylesheet" />

<script src="~/dist/view/post/view.js" defer asp-append-version="true"></script>

<style>

    .post-page-container {
        display: grid;
        grid-template-rows: min-content 1fr;
        gap: 0.5rem;
        max-height: 100vh;
        max-width: 100vw;
    }

    .post-content-container {
        display: grid;
        grid-template-columns: [tags] 400px [media] 1fr [similar] 200px;
        gap: 0.5rem;
        overflow: hidden;
    }

    .post-overflow {
        overflow-y: auto !important;
    }

    @@media(max-width: 1280px) {
        .post-page-container {
            max-height: unset;
        }

        .post-content-container {
            grid-template-columns: unset;
            grid-template-rows: [tags] min-content [media] 1fr [similar] 200px;
        }

        .post-overflow {
            overflow-y: unset !important;
        }
    }

</style>

<div class="container-fluid" id="app">
    <view-post></view-post>
</div>

<script src="https://vjs.zencdn.net/8.10.0/video.min.js"></script>
